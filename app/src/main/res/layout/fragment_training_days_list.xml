<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="trainingDaysListViewModel"
            type="com.example.android.trainingdayslist.TrainingDaysListViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/templateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Click on selected days and fill them with exercises"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/templateName" />

        <TableLayout
            android:id="@+id/buttonTableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hintText">

            <TableRow
                android:id="@+id/firstWeekButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week 1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/firstWeekMondayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,1,1)}"
                    android:text="Mon"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/firstWeekTuesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,2,2)}"
                    android:text="TUE"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/firstWeekWednesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,3,3)}"
                    android:text="Wed"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/firstWeekThursdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,4,4)}"
                    android:text="Thu"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/firstWeekFridayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,5,5)}"
                    android:text="Fri"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/firstWeekSaturdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,6,6)}"
                    android:text="SAT"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/firstWeekSundayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(1,7,7)}"
                    android:text="SUN"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </TableRow>

            <TableRow
                android:id="@+id/secondWeekButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week 2"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/secondWeekMondayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,1,8)}"
                    android:text="Mon"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/secondWeekTuesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,2,9)}"
                    android:text="TUE"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/secondWeekWednesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,3,10)}"
                    android:text="WED"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/secondWeekThursdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,4,11)}"
                    android:text="Thu"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/secondWeekFridayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,5,12)}"
                    android:text="Fri"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/secondWeekSaturdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,6,13)}"
                    android:text="SAT"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/secondWeekSundayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(2,7,14)}"
                    android:text="SUN"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </TableRow>

            <TableRow
                android:id="@+id/thirdWeekButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week 3"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/thirdWeekMondayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,1,15)}"
                    android:text="Mon"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/thirdWeekTuesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,2,16)}"
                    android:text="TUE"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/thirdWeekWednesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,3,17)}"
                    android:text="WED"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/thirdWeekThursdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,4,18)}"
                    android:text="Thu"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/thirdWeekFridayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,5,19)}"
                    android:text="Fri"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/thirdWeekSaturdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,6,20)}"
                    android:text="SAT"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/thirdWeekSundayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(3,7,21)}"
                    android:text="SUN"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </TableRow>

            <TableRow
                android:id="@+id/fourthWeekButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week 4"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/fourthWeekMondayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,1,22)}"
                    android:text="Mon"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fourthWeekTuesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,2,23)}"
                    android:text="TUE"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fourthWeekWednesdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,3,24)}"
                    android:text="WED"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fourthWeekThursdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,4,25)}"
                    android:text="Thu"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fourthWeekFridayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,5,26)}"
                    android:text="Fri"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fourthWeekSaturdayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,6,27)}"
                    android:text="Sut"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/fourthWeekSundayButton"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{() -> trainingDaysListViewModel.fillInDay(4,7,28)}"
                    android:text="SUN"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/completeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/templateDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="220dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
